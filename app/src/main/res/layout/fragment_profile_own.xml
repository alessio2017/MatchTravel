<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/pattern_background_blurred_up_right">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/profileown"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="-10dp"
                    android:fontFamily="@font/covesbold"
                    android:gravity="center"
                    android:text="@string/profileown"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="30sp" />



                <ImageView
                    android:id="@+id/image_profileown"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="50dp"
                    android:contentDescription="@string/user_profile_pic"
                    android:maxWidth="100dp"
                    android:maxHeight="100dp"
                    android:src="@drawable/mypic"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/nameown"
                    android:layout_width="313dp"
                    android:layout_height="86dp"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="50dp"
                    android:fontFamily="@font/covesbold"
                    android:gravity="center"
                    android:text="Mr.Bean"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="40sp" />


                <TextView
                    android:id="@+id/ageown"
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginStart="150dp"
                    android:fontFamily="@font/covesbold"
                    android:gravity="center"
                    android:text="39 yo"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/stateown"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="200dp"
                    android:layout_marginTop="100dp"
                    android:fontFamily="@font/covesbold"
                    android:gravity="center"
                    android:text="Single"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/nationown"
                    android:layout_width="130dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginStart="250dp"
                    android:fontFamily="@font/covesbold"
                    android:gravity="center"
                    android:text="from UK"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />


                <Button
                    android:id="@+id/facebook"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/facebook"
                    android:layout_marginStart="150dp"
                    android:layout_marginTop="160dp"/>
                <Button
                    android:id="@+id/instagram"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="225dp"
                    android:layout_marginTop="160dp"
                    android:background="@drawable/instagram" />
                <Button
                    android:id="@+id/mail"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/mail"
                    android:layout_marginStart="300dp"
                    android:layout_marginTop="160dp" />


                <TextView
                    android:id="@+id/description"
                    android:layout_width="340dp"
                    android:layout_height="210dp"
                    android:layout_marginTop="250dp"
                    android:layout_marginStart="35dp"
                    android:text="Hi! I do not speak much in front of peopleâ€¦
I'm not shy, i just do not talk, although most people say I am one of the most funny people on the planet and also that i remember them a famous spy:Mr. English. Never hear of...
"
                    android:textSize="24dp"
                    android:fontFamily="@font/covesbold"
                    android:background="@drawable/description"
                    android:visibility="visible" />


                <ImageView

                    android:layout_width="340dp"
                    android:layout_height="230dp"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="530dp"
                    android:background="@drawable/description" />


                <TextView
                    android:id="@+id/edit_own"
                    android:layout_width="340dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="560dp"
                    android:fontFamily="@font/covesbold"
                    android:text="Edit"
                    android:textSize="30dp"
                    android:visibility="visible" />

                <ImageView
                    android:layout_width="290dp"
                    android:layout_height="2dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="610dp"
                    android:background="@drawable/line" />

                <TextView
                    android:id="@+id/privacy_own"
                    android:layout_width="340dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="620dp"
                    android:fontFamily="@font/covesbold"
                    android:text="Privacy conditions"
                    android:textSize="30dp"
                    android:visibility="visible" />

                <ImageView
                    android:layout_width="290dp"
                    android:layout_height="2dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="670dp"
                    android:background="@drawable/line" />

                <TextView
                    android:id="@+id/terms"
                    android:layout_width="340dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="680dp"
                    android:fontFamily="@font/covesbold"
                    android:text="Terms"
                    android:textSize="30dp"
                    android:visibility="visible" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="680dp" />
            </RelativeLayout>
        </ScrollView>
