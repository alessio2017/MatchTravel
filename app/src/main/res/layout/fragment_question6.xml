<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/fragment_question5"
    >

    <TextView
        android:id="@+id/weather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/covesbold"
        android:gravity="center"
        android:text="@string/weather"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="40sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/hot_1"
                android:layout_width="340dp"
                android:layout_height="115dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="36dp"
                android:src="@drawable/hot_1" />

            <ImageView
                android:id="@+id/hot_w"
                android:layout_width="191dp"
                android:layout_height="57dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="36dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="36dp"
                android:src="@drawable/hot" />

            <ImageView
                android:id="@+id/temperate_1"
                android:layout_width="340dp"
                android:layout_height="115dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="160dp"
                android:layout_marginEnd="36dp"
                android:src="@drawable/temperate_1" />

            <ImageView
                android:id="@+id/temperate_w"
                android:layout_width="191dp"
                android:layout_height="57dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="36dp"
                android:layout_marginTop="200dp"
                android:layout_marginEnd="36dp"
                android:src="@drawable/temperate" />

            <ImageView
                android:id="@+id/cold_1"
                android:layout_width="340dp"
                android:layout_height="115dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="300dp"
                android:layout_marginEnd="32dp"
                android:src="@drawable/cold_1" />

            <ImageView
                android:id="@+id/cold_w"
                android:layout_width="191dp"
                android:layout_height="57dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="36dp"
                android:layout_marginTop="340dp"
                android:layout_marginEnd="36dp"
                android:src="@drawable/cold" />

            <ImageView
                android:id="@+id/notcare_1"
                android:layout_width="340dp"
                android:layout_height="115dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="440dp"
                android:layout_marginEnd="32dp"
                android:src="@drawable/notcare_1" />

            <ImageView
                android:id="@+id/notcare_w"
                android:layout_width="191dp"
                android:layout_height="57dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="36dp"
                android:layout_marginTop="470dp"
                android:layout_marginEnd="36dp"
                android:src="@drawable/notcare"
                android:visibility="visible" />


        </RelativeLayout>
    </ScrollView>


</LinearLayout>