<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/fragment_question4"
    >

    <TextView
        android:id="@+id/arrive"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/covesbold"
        android:gravity="center"
        android:text="@string/arrive"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="40sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/relax_1"
                android:layout_width="340dp"
                android:layout_height="115dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="36dp"
                android:src="@drawable/relax_1" />

            <ImageView
                android:id="@+id/relax_w"
                android:layout_width="191dp"
                android:layout_height="57dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="36dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="36dp"
                android:src="@drawable/relax" />

            <ImageView
                android:id="@+id/trip_1"
                android:layout_width="340dp"
                android:layout_height="115dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="160dp"
                android:layout_marginEnd="36dp"
                android:src="@drawable/trip_1" />

            <ImageView
                android:id="@+id/trip_w"
                android:layout_width="191dp"
                android:layout_height="57dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="36dp"
                android:layout_marginTop="200dp"
                android:layout_marginEnd="36dp"
                android:src="@drawable/trip" />

            <ImageView
                android:id="@+id/museum_1"
                android:layout_width="340dp"
                android:layout_height="115dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="300dp"
                android:layout_marginEnd="32dp"
                android:src="@drawable/museum_1" />

            <ImageView
                android:id="@+id/museum_w"
                android:layout_width="191dp"
                android:layout_height="57dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="36dp"
                android:layout_marginTop="340dp"
                android:layout_marginEnd="36dp"
                android:src="@drawable/museum" />

            <ImageView
                android:id="@+id/club_1"
                android:layout_width="340dp"
                android:layout_height="115dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="440dp"
                android:layout_marginEnd="32dp"
                android:src="@drawable/club_1" />

            <ImageView
                android:id="@+id/club_w"
                android:layout_width="191dp"
                android:layout_height="57dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="36dp"
                android:layout_marginTop="470dp"
                android:layout_marginEnd="36dp"
                android:src="@drawable/club"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/all_1"
                android:layout_width="340dp"
                android:layout_height="115dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="580dp"
                android:layout_marginEnd="32dp"
                android:src="@drawable/all_1" />

            <ImageView
                android:id="@+id/all_w"
                android:layout_width="191dp"
                android:layout_height="57dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="36dp"
                android:layout_marginTop="600dp"
                android:layout_marginEnd="36dp"
                android:src="@drawable/all"
                android:visibility="visible" />


        </RelativeLayout>
    </ScrollView>


</LinearLayout>