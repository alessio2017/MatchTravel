<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/fragment_question5"
    >

    <TextView
        android:id="@+id/tourists"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/covesbold"
        android:gravity="center"
        android:text="@string/tourists"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="40sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/not_1"
                android:layout_width="340dp"
                android:layout_height="115dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="36dp"
                android:src="@drawable/not_1" />

            <ImageView
                android:id="@+id/not_w"
                android:layout_width="191dp"
                android:layout_height="57dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="36dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="36dp"
                android:src="@drawable/not" />

            <ImageView
                android:id="@+id/care_1"
                android:layout_width="340dp"
                android:layout_height="115dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="160dp"
                android:layout_marginEnd="36dp"
                android:src="@drawable/care_1" />

            <ImageView
                android:id="@+id/care_w"
                android:layout_width="191dp"
                android:layout_height="57dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="36dp"
                android:layout_marginTop="200dp"
                android:layout_marginEnd="36dp"
                android:src="@drawable/care" />

            <ImageView
                android:id="@+id/bit_1"
                android:layout_width="340dp"
                android:layout_height="115dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="300dp"
                android:layout_marginEnd="32dp"
                android:src="@drawable/bit_1" />

            <ImageView
                android:id="@+id/bit_w"
                android:layout_width="191dp"
                android:layout_height="57dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="36dp"
                android:layout_marginTop="340dp"
                android:layout_marginEnd="36dp"
                android:src="@drawable/bit" />

            <ImageView
                android:id="@+id/much_1"
                android:layout_width="340dp"
                android:layout_height="115dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="440dp"
                android:layout_marginEnd="32dp"
                android:src="@drawable/much_1" />

            <ImageView
                android:id="@+id/much_w"
                android:layout_width="191dp"
                android:layout_height="57dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="36dp"
                android:layout_marginTop="470dp"
                android:layout_marginEnd="36dp"
                android:src="@drawable/much"
                android:visibility="visible" />


        </RelativeLayout>
    </ScrollView>


</LinearLayout>